<Application x:Class="WarehouseApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WarehouseApp.ViewModels"
             xmlns:views="clr-namespace:WarehouseApp.Views"
             xmlns:conv="clr-namespace:WarehouseApp.Converters"
             >
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:CategoriesViewModel}">
            <views:CategoriesView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ProductsViewModel}">
            <views:ProductsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ManufacturersViewModel}">
            <views:ManufacturersView />
        </DataTemplate>

        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Application.Resources>
</Application>
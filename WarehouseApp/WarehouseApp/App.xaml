<Application x:Class="WarehouseApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vmCat="clr-namespace:WarehouseApp.ViewModels.CategoriesViewModels"
             xmlns:vmProd="clr-namespace:WarehouseApp.ViewModels.ProductsViewModels"
             xmlns:vmMan="clr-namespace:WarehouseApp.ViewModels.ManufacturersViewModels"
             xmlns:vCat="clr-namespace:WarehouseApp.Views.CategoriesViews"
             xmlns:vProd="clr-namespace:WarehouseApp.Views.ProductsViews"
             xmlns:vMan="clr-namespace:WarehouseApp.Views.ManufacturersViews"

             xmlns:conv="clr-namespace:WarehouseApp.Converters"
             >
    <Application.Resources>
        <DataTemplate DataType="{x:Type vmCat:CategoriesViewModel}">
            <vCat:CategoriesView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vmProd:ProductsViewModel}">
            <vProd:ProductsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vmMan:ManufacturersViewModel}">
            <vMan:ManufacturersView />
        </DataTemplate>

        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:RowIndexConverter x:Key="RowIndexConverter" />


        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                            CornerRadius="15"
                            Background="White"
                            BorderBrush="#2D2D30"
                            BorderThickness="1"/>
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      Focusable="False"
                                      ClickMode="Press">
                                    <Path x:Name="Arrow"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,10,0"
                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                  Fill="#2D2D30"
                                  Width="8"
                                  Height="4"/>
                                </ToggleButton>

                                <ContentPresenter x:Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                          Margin="10,0,25,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>

                                <TextBox x:Name="PART_EditableTextBox"
                                 Style="{x:Null}"
                                 Template="{x:Null}"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 Margin="10,0,25,0"
                                 Focusable="True"
                                 Background="Transparent"
                                 Visibility="Hidden"
                                 Foreground="#2D2D30"/>
                            </Grid>

                            <Popup x:Name="Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                CornerRadius="10"
                                Background="White"
                                BorderBrush="#2D2D30"
                                BorderThickness="1">
                                    <ScrollViewer Margin="4,6,4,6"
                                          SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                            KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NumericRoundedBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="15"
                        BorderBrush="#2D2D30"
                        BorderThickness="1"
                        Background="White"
                        Padding="10,4"
                        SnapsToDevicePixels="True">
                            <Grid>
                                <!-- Текст -->
                                <ScrollViewer x:Name="PART_ContentHost"
                                      VerticalAlignment="Center"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"/>

                                <!-- Плейсхолдер -->
                                <TextBlock Text="{TemplateBinding Tag}"
                                   Foreground="#888"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   FontStyle="Italic"
                                   FontSize="{TemplateBinding FontSize}"
                                   Visibility="{Binding Text.IsEmpty, 
                                                RelativeSource={RelativeSource TemplatedParent}, 
                                                Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#2D2D30"/>
        </Style>


        <Style x:Key="RoundedSearchBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#2D2D30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="15"
                                BorderBrush="#2D2D30"
                                BorderThickness="3"
                                Background="White"
                                Margin="5">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Margin="0"
                                              VerticalAlignment="Center"/>
                                <TextBlock Text="{TemplateBinding Tag}"
                                           FontSize="18"
                                           Foreground="Gray"
                                           Margin="15,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           x:Name="PlaceholderText"
                                           Visibility="Visible"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Якщо текст введено — сховати плейсхолдер -->
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
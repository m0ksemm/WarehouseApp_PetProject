<UserControl x:Class="WarehouseApp.Views.CategoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WarehouseApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Categories Page"
                   FontSize="20"
                   Grid.ColumnSpan="2"
                   FontWeight="Bold"
                   Foreground="#2D2D30"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <!-- Кнопка Add -->
        <Button Grid.Row="1"
                Content="Add"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#2D2D30"
                Command="{Binding AddCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            Margin="5"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="3">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка Update -->
        <Button Grid.Row="1"
                Grid.Column="1"
                Content="Update"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#2D2D30"
                Command="{Binding UpdateCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            Margin="5"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="3">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Кнопка Delete -->
        <Button Grid.Row="1"
                Grid.Column="2"
                Content="Delete"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#2D2D30"
                Command="{Binding DeleteCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            Margin="5"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="3">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Поле пошуку -->
        <TextBox Grid.Row="1"
                 Grid.Column="3"
                 Style="{StaticResource RoundedSearchBoxStyle}"
                 Tag="Search..."
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Кнопка пошуку -->
        <Button Grid.Row="1"
                Grid.Column="4"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#2D2D30"
                Command="{Binding SearchCommand}">
            <Image Source="/Images/search.png" Width="30" Height="30"/>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            Margin="5"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="3">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Таблиця категорій -->
        <DataGrid Grid.Row="2"
                  Grid.ColumnSpan="5"
                  ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  AlternationCount="9999"
                  Margin="10"
                  FontSize="20"
                  Foreground="#2D2D30"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№"
                                    Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow},
                                                      Path=AlternationIndex,
                                                      Converter={StaticResource RowIndexConverter}}"
                                    Width="50"/>
                <DataGridTextColumn Header="Category Name"
                                    Binding="{Binding CategoryName}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
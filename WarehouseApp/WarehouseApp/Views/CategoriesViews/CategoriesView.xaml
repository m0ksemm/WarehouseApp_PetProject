<UserControl x:Class="WarehouseApp.Views.CategoriesViews.CategoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WarehouseApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Categories Page"
                   FontSize="20"
                   Grid.ColumnSpan="2"
                   FontWeight="Bold"
                   Foreground="#2D2D30"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <Button Grid.Row="1"
                Content="Add"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#2D2D30"
                Command="{Binding AddCommand}"
                Style="{StaticResource RoundedButtonStyle}">
        </Button>

        <Button Grid.Row="1"
                Grid.Column="1"
                Content="Update"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#2D2D30"
                Command="{Binding UpdateCommand}"
                Style="{StaticResource RoundedButtonStyle}">
        </Button>

        <Button Grid.Row="1"
                Grid.Column="2"
                Content="Delete"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#2D2D30"
                Command="{Binding DeleteCommand}"
                Style="{StaticResource RoundedButtonStyle}">
        </Button>

        <TextBox Grid.Row="1"
                 Grid.Column="3"
                 Style="{StaticResource RoundedSearchBoxStyle}"
                 Tag="Search..."
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>


        <DataGrid Grid.Row="2"
          Grid.ColumnSpan="4"
          ItemsSource="{Binding Categories}"
          SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          Margin="10"
          FontSize="20"
          Foreground="#2D2D30"
          IsReadOnly="True"
          GridLinesVisibility="Horizontal"
          BorderThickness="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding RowNumber}" Width="50"/>
                <DataGridTextColumn Header="Category Name" Binding="{Binding CategoryName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
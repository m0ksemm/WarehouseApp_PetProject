<Window x:Class="WarehouseApp.Views.ProductsViews.ProductAddEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:helpers="clr-namespace:WarehouseApp.Helpers"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"        
        Title="Product"
        Height="630" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="White">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>


        <!-- PRODUCT NAME -->
        <TextBlock Text="Product Name:" 
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30" />

        <TextBox Grid.Row="1"
                 Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 Padding="10,0"
                 Height="40"
                 BorderThickness="2"
                 BorderBrush="#CCCCCC"
                 VerticalAlignment="Center"
                 Margin="0,5,0,15"
                 VerticalContentAlignment="Center">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>


        <!-- CATEGORY -->
        <TextBlock Grid.Row="2"
                   Text="Category:"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30"
                   Margin="0,0,0,5"/>

        <ComboBox Grid.Row="3"
          ItemsSource="{Binding FilteredCategories}"
          SelectedItem="{Binding SelectedCategory}"
          Text="{Binding CategorySearchText, UpdateSourceTrigger=PropertyChanged}"
          IsEditable="True"
          IsTextSearchEnabled="False"
          StaysOpenOnEdit="True"
          VerticalContentAlignment="Center"
          Height="40"
          FontSize="16"
          Margin="0,0,0,10"/>


        <!-- MANUFACTURER -->
        <TextBlock Grid.Row="4"
                   Text="Manufacturer:"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30"
                   Margin="0,0,0,5"/>

        <ComboBox Grid.Row="5"
          ItemsSource="{Binding FilteredManufacturers}"
          SelectedItem="{Binding SelectedManufacturer}"
          Text="{Binding ManufacturerSearchText, UpdateSourceTrigger=PropertyChanged}"
          IsEditable="True"
          IsTextSearchEnabled="False"
          StaysOpenOnEdit="True"
          VerticalContentAlignment="Center"
          Height="40"
          FontSize="16"
          Margin="0,0,0,10"/>


        <!-- WEIGHT -->
        <TextBlock Grid.Row="6"
                   Text="Weight (kg):"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30"
                   Margin="0,0,0,5"/>

        <TextBox Grid.Row="7"
         Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"
         FontSize="16"
         Height="40"
         Padding="10,0"
         VerticalContentAlignment="Center"
         BorderBrush="#CCCCCC"
         BorderThickness="2"
         Margin="0,0,0,15">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
            <i:Interaction.Behaviors>
                <helpers:DecimalInputBehavior/>
            </i:Interaction.Behaviors>
        </TextBox>


        <!-- PRICE -->
        <TextBlock Grid.Row="8"
                   Text="Price:"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30"
                   Margin="0,0,0,5"/>


        <TextBox Grid.Row="9"
         Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
         FontSize="16"
         Height="40"
         Padding="10,0"
         VerticalContentAlignment="Center"
         BorderBrush="#CCCCCC"
         BorderThickness="2"
         Margin="0,0,0,15">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
            <i:Interaction.Behaviors>
                <helpers:DecimalInputBehavior/>
            </i:Interaction.Behaviors>
        </TextBox>


        <!-- BARCODE -->
        <TextBlock Grid.Row="10"
                   Text="Barcode:"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30"
                   Margin="0,0,0,5"/>

        <TextBox Grid.Row="11"
                 Text="{Binding BarCode, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 VerticalContentAlignment="Center"
                 Height="40"
                 Padding="10,0"
                 BorderBrush="#CCCCCC"
                 BorderThickness="2"
                 Margin="0,0,0,20">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>


        <!-- BUTTONS -->
        <StackPanel Grid.Row="12"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Width="100" Height="45"
                    Style="{StaticResource RoundedSaveButtonStyle}"/>

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100" Height="45"
                    Style="{StaticResource RoundedDefaultButtonStyle}"/>
        </StackPanel>

    </Grid>
</Window>
<Window x:Class="WarehouseApp.Views.ProductsViews.ProductAddEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product"
        Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="White">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>


        <!-- PRODUCT NAME -->
        <TextBlock Text="Product Name:" 
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30" />

        <TextBox Grid.Row="1"
                 Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 VerticalContentAlignment="Center"
                 Padding="10,0"
                 Height="40"
                 BorderThickness="2"
                 BorderBrush="#CCCCCC"
                 Margin="0,5,0,15">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>


        <!-- CATEGORY -->
        <TextBlock Grid.Row="2"
                   Text="Category:"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30"
                   Margin="0,0,0,5"/>

        <ComboBox Grid.Row="3"
                  ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SelectedCategory}"
                  DisplayMemberPath="Name"
                  FontSize="16"
                  Height="40"
                  Padding="10,0"
                  Foreground="#2D2D30"
                  BorderBrush="#CCCCCC"
                  BorderThickness="2"
                  Margin="0,0,0,15">
            <ComboBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </ComboBox.Resources>
        </ComboBox>


        <!-- MANUFACTURER -->
        <TextBlock Grid.Row="4"
                   Text="Manufacturer:"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30"
                   Margin="0,0,0,5"/>

        <ComboBox Grid.Row="5"
                  ItemsSource="{Binding Manufacturers}"
                  SelectedItem="{Binding SelectedManufacturer}"
                  DisplayMemberPath="ManufacturerName"
                  FontSize="16"
                  Height="40"
                  Padding="10,0"
                  Foreground="#2D2D30"
                  BorderBrush="#CCCCCC"
                  BorderThickness="2"
                  Margin="0,0,0,15">
            <ComboBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </ComboBox.Resources>
        </ComboBox>


        <!-- WEIGHT -->
        <TextBlock Grid.Row="6"
                   Text="Weight (kg):"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30"
                   Margin="0,0,0,5"/>

        <TextBox Grid.Row="7"
                 Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 Height="40"
                 Padding="10,0"
                 BorderBrush="#CCCCCC"
                 BorderThickness="2"
                 Margin="0,0,0,15">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>


        <!-- PRICE -->
        <TextBlock Grid.Row="8"
                   Text="Price:"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30"
                   Margin="0,0,0,5"/>

        <TextBox Grid.Row="9"
                 Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 Height="40"
                 Padding="10,0"
                 BorderBrush="#CCCCCC"
                 BorderThickness="2"
                 Margin="0,0,0,15">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>


        <!-- BARCODE -->
        <TextBlock Grid.Row="10"
                   Text="Barcode:"
                   FontSize="16" FontWeight="Bold"
                   Foreground="#2D2D30"
                   Margin="0,0,0,5"/>

        <TextBox Grid.Row="11"
                 Text="{Binding BarCode, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 Height="40"
                 Padding="10,0"
                 BorderBrush="#CCCCCC"
                 BorderThickness="2"
                 Margin="0,0,0,20">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>


        <!-- BUTTONS -->
        <StackPanel Grid.Row="12"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Width="100" Height="45"
                    Style="{StaticResource RoundedSaveButtonStyle}"/>

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100" Height="45"
                    Style="{StaticResource RoundedDefaultButtonStyle}"/>
        </StackPanel>

    </Grid>
</Window>
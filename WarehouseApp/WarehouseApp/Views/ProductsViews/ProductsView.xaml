<UserControl x:Class="WarehouseApp.Views.ProductsViews.ProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:WarehouseApp.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Products Page"
                   FontSize="20"
                   Grid.ColumnSpan="2"
                   FontWeight="Bold"
                   Foreground="#2D2D30"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <!-- Кнопки -->
        <Button Grid.Row="1" Content="Add"
                FontSize="16" FontWeight="Bold"
                Foreground="#2D2D30"
                Command="{Binding AddCommand}"
                Style="{StaticResource RoundedButtonStyle}">
        </Button>

        <Button Grid.Row="1" Grid.Column="1" Content="Update"
                FontSize="16" FontWeight="Bold"
                Foreground="#2D2D30"
                Command="{Binding UpdateCommand}"
            Style="{StaticResource RoundedButtonStyle}">
        </Button>

        <Button Grid.Row="1" Grid.Column="2" Content="Delete"
                FontSize="16" FontWeight="Bold"
                Foreground="#2D2D30"
                Command="{Binding DeleteCommand}"
                Style="{StaticResource RoundedButtonStyle}">
        </Button>

        <TextBox Grid.Row="1"
                 Grid.Column="3"
                 Style="{StaticResource RoundedSearchBoxStyle}"
                 Tag="Search..."
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="2"
            Grid.ColumnSpan="4"
            Orientation="Horizontal"
            Margin="0,10,10,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="40">

            <TextBlock Text="Category:"
                       FontSize="18"
                       Margin="10,0,10,0"
                       Foreground="#2D2D30"
                       VerticalAlignment="Center"/>


            <ComboBox Width="220"
                  IsEditable="True"
                  IsTextSearchEnabled="False"
                  StaysOpenOnEdit="True"
                  Text="{Binding CategorySearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  ItemsSource="{Binding CategoriesFilter}"
                  SelectedItem="{Binding SelectedCategoryFilter, Mode=TwoWay}"
                  DisplayMemberPath="CategoryName"
                  FontSize="18"
                  Padding="5"
                  Foreground="#2D2D30"
                  Margin="0,0,10,0"
                  VerticalAlignment="Center"/>

            <TextBlock Text="Manufacturer:"
           FontSize="18"
                       Margin="10,0,10,0"
           Foreground="#2D2D30"
           VerticalAlignment="Center"/>
            
            <!-- Manufacturer ComboBox -->
            <ComboBox Width="220"
                       IsEditable="True"
                      IsTextSearchEnabled="False"
                      StaysOpenOnEdit="True"
                      Text="{Binding ManufacturerSearchText, UpdateSourceTrigger=PropertyChanged}"
                      ItemsSource="{Binding ManufacturersFilter}"
                      SelectedItem="{Binding SelectedManufacturerFilter, Mode=TwoWay}"
                      DisplayMemberPath="ManufacturerName"
                      FontSize="18"
                      Foreground="#2D2D30"
                      Margin="0,0,10,0"
                      Padding="5"
                      VerticalAlignment="Center"/>


            <!-- Min Price -->
            <TextBox Width="120"
         Style="{StaticResource NumericRoundedBoxStyle}"
         Tag="Min Price"
         Text="{Binding MinPriceFilterText, UpdateSourceTrigger=PropertyChanged}"
         helpers:NumericInputBehavior.AllowOnlyNumbers="True"
         Margin="10,0,10,0"/>

            <!-- Max Price -->
            <TextBox Width="120"
         Style="{StaticResource NumericRoundedBoxStyle}"
         Tag="Max Price"
         Text="{Binding MaxPriceFilterText, UpdateSourceTrigger=PropertyChanged}"
         helpers:NumericInputBehavior.AllowOnlyNumbers="True"/>



        </StackPanel>


        <!-- Таблиця -->
        <DataGrid Grid.Row="3"
                  Grid.ColumnSpan="4"
                  ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  Margin="10"
                  FontSize="20"
                  Foreground="#2D2D30"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  BorderThickness="0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding RowNumber}" Width="50"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="2*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category.CategoryName}" Width="1.25*"/>
                <DataGridTextColumn Header="Manufacturer" Binding="{Binding Manufacturer.ManufacturerName}" Width="1.25*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*" />
                <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" Width="*" />
                <DataGridTextColumn Header="Barcode" Binding="{Binding BarCode}" Width="1.5*" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
<Window x:Class="WarehouseApp.Views.WarehouseProductsViews.WarehouseProductAddEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:WarehouseApp.Helpers"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"   
        xmlns:local="clr-namespace:WarehouseApp.Views.WarehouseProductsViews"
        mc:Ignorable="d"
        Title="WarehouseProductAddEditView" 
        Height="300" 
        Width="450"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        
        
        <!-- Product -->
        <TextBlock Grid.Row="1"
               Text="Product:"
               FontSize="16" FontWeight="Bold"
               Foreground="#2D2D30"
               Margin="0,0,0,5"/>

        <ComboBox Grid.Row="3"
                ItemsSource="{Binding FilteredProducts}"
                SelectedItem="{Binding SelectedProduct}"
                Text="{Binding ProductSearchText, UpdateSourceTrigger=PropertyChanged}"
                IsEditable="True"
                IsTextSearchEnabled="False"
                StaysOpenOnEdit="True"
                VerticalContentAlignment="Center"
                Height="40"
                FontSize="16"
                Margin="0,0,0,10">

        </ComboBox>


        <TextBlock Grid.Row="4"
          Text="Count:"
          FontSize="16" FontWeight="Bold"
          Foreground="#2D2D30"
          Margin="0,0,0,5"/>

        <!-- Count -->
        <TextBox Grid.Row="5"
            Text="{Binding Count, UpdateSourceTrigger=PropertyChanged}"
            FontSize="16"
            Height="40"
            Padding="10,0"
            VerticalContentAlignment="Center"
            BorderBrush="#CCCCCC"
            BorderThickness="2"
            Margin="0,0,0,15">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
            <i:Interaction.Behaviors>
                <helpers:DecimalInputBehavior/>
            </i:Interaction.Behaviors>
        </TextBox>

        <!-- BUTTONS -->
        <StackPanel Grid.Row="6"
                Orientation="Horizontal"
                HorizontalAlignment="Right">

            <Button Content="Save"
                Command="{Binding SaveCommand}"
                Width="100" Height="45"
                Style="{StaticResource RoundedSaveButtonStyle}"/>

            <Button Content="Cancel"
                Command="{Binding CancelCommand}"
                Width="100" Height="45"
                Style="{StaticResource RoundedDefaultButtonStyle}"/>
        </StackPanel>

    </Grid>
</Window>

<UserControl x:Class="WarehouseApp.Views.WarehouseProductsViews.WarehouseProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WarehouseApp.Views.WarehouseProductsViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Назва -->
        <TextBlock Text="{Binding WarehouseTitle}"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#2D2D30"
                   VerticalAlignment="Center"
                   Margin="10"/>

        <!-- Фільтри -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="10"
                    VerticalAlignment="Center"
                    Height="40">

            <TextBox Width="250"
                     Style="{StaticResource RoundedSearchBoxStyle}"
                     Tag="Search..."
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,10,0"/>

            <TextBlock Text="Category:"
                       FontSize="18"
                       Margin="10,0,10,0"
                       VerticalAlignment="Center"/>

            <ComboBox Width="200"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory}"
                      DisplayMemberPath="CategoryName"
                      FontSize="18"
                      Margin="0,0,10,0"/>

            <TextBlock Text="Manufacturer:"
                       FontSize="18"
                       Margin="10,0,10,0"
                       VerticalAlignment="Center"/>

            <ComboBox Width="200"
                      ItemsSource="{Binding Manufacturers}"
                      SelectedItem="{Binding SelectedManufacturer}"
                      DisplayMemberPath="ManufacturerName"
                      FontSize="18"
                      Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Таблиця товарів -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding WarehouseProducts}"
                  SelectedItem="{Binding SelectedProduct}"
                  AutoGenerateColumns="False"
                  Margin="10"
                  FontSize="18"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding RowNumber}" Width="40"/>
                <DataGridTextColumn Header="Product" Binding="{Binding Product.ProductName}" Width="2*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Product.Category.CategoryName}" Width="1.2*"/>
                <DataGridTextColumn Header="Manufacturer" Binding="{Binding Product.Manufacturer.ManufacturerName}" Width="1.2*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="0.8*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Product.Price}" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
